<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col col-md-12 col-sm-12 mt-5">
            <form action="/admin/login" method="post">
                <div class="mb-3">
                    <label for="usuario" class="form-label">Usuario:</label>
                    <input type="text" class="form-control border border-dark" id="usuario" name="usuario">

                    <div class="mb-3 mt-2">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" class="form-control border border-dark" id="password" name="password">
                    </div>
                    <div class="col-auto">
                     <button type="submit" class="btn btn-primary"><i class="bi bi-box-arrow-in-right"></i> Iniciar
                        Sesion</button>
                    </div>
            </form>
            {{#if error}}
            <p class="mt-2">Usuario y/o Contrase√±a incorecto/s</p>
            {{/if}}
        </div>
    </div>
</div>