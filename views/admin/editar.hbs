<div class="container mt-2">
    <div class="row">
        <div class="col">
            <p class="fs-3 text-center text-decoration-underline">Editar novedad</p>
            <form action="/admin/novedades/editar" method="post">
                <input type="hidden" name="id" value="{{novedades.id}}">

                <div class="mb-3">
                    <label for="titulo" class="form-label">Titulo:</label>
                    <input type="text" class="form-control" id="titulo" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="mb-3">
                    <label for="cuerpo" class="form-label">Cuerpo:</label>
                    <textarea class="form-control" id="cuerpo" name="cuerpo" rows="5">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="col-auto text-end">
                    <button type="submit" class="btn btn-success mb-3">Guardar</button> 
                    <p class="text-end">
                    <a href="/admin/novedades" class="btn btn-danger">Cancelar</a>
                    </p>
                </div>
            </form>
            
            {{#if error}}
            <p class="fs-5">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>