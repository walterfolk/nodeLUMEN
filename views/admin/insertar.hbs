<div class="container mt-4">
    <div class="row">
        <div class="col">
            <p class="fs-3 text-center text-decoration-underline">Insertar una novedad</p>
        <form action="/admin/novedades/insertar" method="post">
            <div class="mb-3">
                <label for="titulo" class="form-label">Titulo:</label>
                <input type="text" class="form-control" id="titulo" name="titulo">
            </div>
            <div class="mb-3">
                <label for="cuerpo" class="form-label">Cuerpo:</label>
                <textarea class="form-control" id="cuerpo" name="cuerpo" rows="5"></textarea>
            </div>
        <div class="col-auto text-end">
        <button type="submit" class="btn btn-success mb-3">Insertar</button>
        </div>
        </form>
        {{#if error}}
        <p class="fs-5">{{message}}</p>
        {{/if}}
        </div>
    </div>
</div>